{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["@fastify/jwt", "node"], // Tambahkan ini
    "resolveJsonModule": true,
    "baseUrl": "./",
    "skipDefaultLibCheck": true,
    "paths": {
  
      "src/*": ["./src/*"]
  
    },
  },
  "include": ["src/**/*.ts", "types.d.ts"], // Pastikan `src` juga masuk jika file ada di dalamnya
  "exclude": ["node_modules"]
}
